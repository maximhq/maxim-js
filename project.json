{
	"name": "maxim-js",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/maxim-js/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"clean": true,
				"outputPath": "dist/libs/maxim-js",
				"rootDir": "libs/maxim-js",
				"main": "libs/maxim-js/index.ts",
				"tsConfig": "libs/maxim-js/tsconfig.lib.json",
				"assets": ["libs/maxim-js/*.md"],
				"sourceMap": false,
				"inlineSources": false,
				"optimization": true,
				"extractLicenses": true
			}
		},
		"publish": {
			"command": "node tools/scripts/publish.mjs maxim-js {args.ver} {args.tag}",
			"dependsOn": ["build"]
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/maxim-js/**/*.ts", "libs/maxim-js/package.json"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/maxim-js/jest.config.ts"
			}
		}
	},
	"tags": []
}
